@model IEnumerable<Category> //controller is returning data and it needs to be captured (same data type as returned by action)
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New
            </a>
        </div>
    </div>
    <br />
    <br /> 


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td style="width:50%">@item.Name</td>
                <td style="width:30%">@item.DisplayOrder</td>
            </tr>
        }
    </tbody>
</table>
</div>

