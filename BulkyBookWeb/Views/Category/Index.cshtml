@model IEnumerable<Category> //controller is returning data and it needs to be captured (same data type as returned by action)
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-info">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New
            </a>
        </div>
    </div>
    <br />
    <br /> 


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td style="width:40%">@item.Name</td>
                <td style="width:20%">@item.DisplayOrder</td>
                <td>
                    <div class="w-50 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                    </div>
                </td>
                <td>
                     <div class="w-50 btn-group" role="group">
                            <a class="btn btn-warning mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill"></i> Delete</a>
                     </div>
                 </td>
            </tr>
        }
    </tbody>
</table>
    <div>
        @if (Model.Count() == 0)
        {
            <h6 style="margin-left:5px"> Nothing to show here</h6>
        }
    </div>
</div>

